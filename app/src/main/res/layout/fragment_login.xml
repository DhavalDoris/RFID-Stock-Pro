<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etEmail"
            style="@style/AppEditText"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/edittext_bg"
            android:drawableStart="@drawable/ic_email"
            android:fontFamily="@font/rethinksans_variablefont_wght"
            android:hint="Email Address"
            android:padding="12dp"
            android:textSize="@dimen/_12ssp" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etPassword"
            style="@style/AppEditText"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/edittext_bg"
            android:drawableStart="@drawable/ic_password"
            android:drawableEnd="@drawable/eye_visible_image"
            android:fontFamily="@font/rethinksans_variablefont_wght"
            android:hint="Password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textSize="@dimen/_12ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_7sdp"
            android:fontFamily="@font/rethinksans_variablefont_wght"
            android:text="Forgot password?"
            android:textColor="@color/appMainColor"
            android:textSize="@dimen/_11ssp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLogin"
        android:visibility="gone">

        <TextView
            android:id="@+id/btnReadUser"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Read" />

        <TextView
            android:id="@+id/btnSelectMedia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="upload" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvTerms"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/continue_btn_bg"
        android:fontFamily="@font/rethinksans_variablefont_wght"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:padding="12dp"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_15ssp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginBottom="@dimen/_30sdp"
        android:fontFamily="@font/rethinksans_variablefont_wght"
        android:gravity="center|bottom"
        android:paddingHorizontal="@dimen/_20ssp"
        android:textSize="@dimen/_10ssp" />


</RelativeLayout>
