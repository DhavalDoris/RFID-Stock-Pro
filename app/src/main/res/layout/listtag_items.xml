<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minWidth="410dp"
    android:orientation="vertical"
    android:padding="2dp">

    <!--<TextView
        android:id="@+id/TvTag"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:paddingTop="3dp"
        android:paddingBottom="2dp" />-->

    <TextView
        android:id="@+id/TvTagCount"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="2dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/TvTagRssi"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="3dp"
        android:visibility="gone"
        android:paddingBottom="2dp" />

    <TextView
        android:id="@+id/TvPhase"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="3dp"
        android:visibility="gone"
        android:paddingBottom="2dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:layout_marginHorizontal="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" >

            <CheckBox
                android:id="@+id/customCheckBox"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_gravity="center_vertical"
                android:button="@drawable/custom_checkbox"
                android:background="@null"
                android:focusable="true"
                android:clickable="true"/>

            <TextView
                android:id="@+id/TvTag"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingTop="3dp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="E280151566565465645511B0"
                android:textColor="@color/black"
                android:fontFamily="@font/rethinksans_variablefont_wght"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:paddingBottom="2dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>