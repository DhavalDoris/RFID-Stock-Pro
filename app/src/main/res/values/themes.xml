<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RFIDStockPro" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/appMainColor</item>
        <item name="colorPrimaryDark">@color/appMainColor</item>
        <item name="android:statusBarColor">@color/appMainColor</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Use false for white icons -->
    </style>

    <style name="Theme.RFIDStockPro" parent="Base.Theme.RFIDStockPro" />

    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/rethinksans_variablefont_wght</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>

        <item name="android:singleLine">true</item> <!-- Ensures only one line -->
        <item name="android:imeOptions">actionNext</item> <!-- Shows "Next" button -->
<!--        <item name="android:inputType">text</item> &lt;!&ndash; Prevents multiline input &ndash;&gt;-->
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/rethinksans_bold</item>
    </style>


    <style name="OtpInputStyle">
        <item name="android:layout_marginHorizontal">@dimen/_5sdp</item>
        <item name="android:layout_width">@dimen/_48sdp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:background">@drawable/otp_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="DashboardButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_70sdp</item>
        <item name="android:layout_marginVertical">@dimen/_10sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/buy_bg</item>
    </style>

    <style name="DashboardTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/rethinksans_bold</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:textColor">#EB7375</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="DashboardImageStyle">
        <item name="android:layout_width">@dimen/_55sdp</item>
        <item name="android:layout_height">@dimen/_55sdp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
    </style>

    <style name="Theme.MyApp.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


</resources>